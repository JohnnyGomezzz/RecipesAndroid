<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_margin_eighth"
    android:weightSum="3">

    <TextView
        android:id="@+id/tvIngredientDescription"
        style="@style/StyleIngredient"
        android:layout_width="@dimen/ingredient_description_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin_half"
        android:layout_weight="2"
        tools:text="Веганская булочка для гамбургера"/>

    <TextView
        android:id="@+id/tvQuantityAndUnits"
        style="@style/StyleIngredient"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin_half"
        android:layout_weight="1"
        tools:text="1 ст. ложка"/>

</LinearLayout>