<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleIngredient" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleMethod" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="StylePortions" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/portions_color</item>
    </style>

    <style name="StyleDescription12" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="StyleButton14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitle20" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/page_title_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:background">@drawable/shape_title20</item>
    </style>

    <style name="Style20" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleButton14</item>
        <item name="cornerRadius">@dimen/corner_radius_main</item>
    </style>

    <style name="StyleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:paddingStart">@dimen/margin_seekbar</item>
        <item name="android:paddingEnd">@dimen/margin_seekbar</item>
    </style>

</resources>